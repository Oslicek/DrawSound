<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:graphics="clr-namespace:DrawSound.Graphics"
             x:Class="DrawSound.MainPage"
             BackgroundColor="#1a1a2e">

    <Grid RowDefinitions="Auto, *, *" Padding="20">
        
        <!-- Control Buttons - Top -->
        <HorizontalStackLayout Grid.Row="0" 
                               HorizontalOptions="Center" 
                               Spacing="10"
                               Margin="0,0,0,10">
            <Button Text="∿ Sine"
                    FontSize="14"
                    BackgroundColor="#2a5a2a"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnGenerateSineClicked" />
            <Button Text="⌫ Clear"
                    FontSize="14"
                    BackgroundColor="#5a2a2a"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnClearClicked" />
            <Button Text="✕ Delete Node"
                    FontSize="14"
                    BackgroundColor="#4a3a2a"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnDeleteNodeClicked" />
        </HorizontalStackLayout>

        <!-- Bezier Wave Canvas -->
        <Border Grid.Row="1" 
                StrokeShape="RoundRectangle 12"
                Stroke="#512BD4"
                StrokeThickness="2"
                Margin="0,0,0,10">
            <GraphicsView x:Name="WaveformView"
                          StartInteraction="OnWaveformStartInteraction"
                          DragInteraction="OnWaveformDragInteraction"
                          EndInteraction="OnWaveformEndInteraction">
                <GraphicsView.Drawable>
                    <graphics:BezierWaveDrawable x:Name="WaveformDrawable" />
                </GraphicsView.Drawable>
            </GraphicsView>
        </Border>

        <!-- Play Button - Bottom -->
        <Grid Grid.Row="2">
            <Button 
                x:Name="ToneButton"
                Text="C4"
                FontSize="72"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#512BD4"
                CornerRadius="20"
                WidthRequest="200"
                HeightRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Pressed="OnToneButtonPressed"
                Released="OnToneButtonReleased" />
        </Grid>
        
    </Grid>

</ContentPage>
