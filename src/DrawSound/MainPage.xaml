<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:graphics="clr-namespace:DrawSound.Graphics"
             x:Class="DrawSound.MainPage"
             BackgroundColor="#1a1a2e">

    <Grid RowDefinitions="*, *" Padding="20">
        
        <!-- Wave Canvas - Top Half -->
        <Border Grid.Row="0" 
                StrokeShape="RoundRectangle 12"
                Stroke="#512BD4"
                StrokeThickness="2"
                Margin="0,0,0,10">
            <GraphicsView x:Name="WaveformView">
                <GraphicsView.Drawable>
                    <graphics:WaveformDrawable x:Name="WaveformDrawable" />
                </GraphicsView.Drawable>
            </GraphicsView>
        </Border>

        <!-- Button - Bottom Half -->
        <Grid Grid.Row="1">
            <Button 
                x:Name="ToneButton"
                Text="C4"
                FontSize="72"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#512BD4"
                CornerRadius="20"
                WidthRequest="200"
                HeightRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Pressed="OnToneButtonPressed"
                Released="OnToneButtonReleased" />
        </Grid>
        
    </Grid>

</ContentPage>
