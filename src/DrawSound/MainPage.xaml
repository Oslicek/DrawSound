<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:graphics="clr-namespace:DrawSound.Graphics"
             xmlns:local="clr-namespace:DrawSound"
             x:Class="DrawSound.MainPage"
             BackgroundColor="#1a1a2e"
             SizeChanged="OnPageSizeChanged">

    <!-- Portrait Layout (default) -->
    <Grid x:Name="PortraitLayout" RowDefinitions="Auto, 100, Auto, 80, Auto, 50, *" Padding="4" IsVisible="True">

        <!-- Commit hash label -->
        <Label Text="{x:Static local:BuildInfo.CommitHash}"
               FontSize="8"
               TextColor="#666"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="1,1,0,0" />
    
        <!-- Control Buttons - Row 0 -->
        <HorizontalStackLayout Grid.Row="0" 
                               HorizontalOptions="Center" 
                               Spacing="8"
                               Margin="0,0,0,4">
            <Button Text="∿" FontSize="14" BackgroundColor="#2a5a2a" TextColor="White"
                    CornerRadius="6" WidthRequest="40" HeightRequest="30"
                    Clicked="OnGenerateSineClicked" />
            <Button Text="⌫" FontSize="14" BackgroundColor="#5a2a2a" TextColor="White"
                    CornerRadius="6" WidthRequest="40" HeightRequest="30"
                    Clicked="OnClearClicked" />
            <Button Text="✕" FontSize="14" BackgroundColor="#4a3a2a" TextColor="White"
                    CornerRadius="6" WidthRequest="40" HeightRequest="30"
                    Clicked="OnDeleteNodeClicked" />
        </HorizontalStackLayout>

        <!-- Bezier Wave Canvas - Row 1 -->
        <Border Grid.Row="1" 
                StrokeShape="RoundRectangle 4"
                Stroke="#512BD4"
                StrokeThickness="2"
                Margin="0,4">
            <GraphicsView x:Name="WaveformView"
                          StartInteraction="OnWaveformStartInteraction"
                          DragInteraction="OnWaveformDragInteraction"
                          EndInteraction="OnWaveformEndInteraction">
                <GraphicsView.Drawable>
                    <graphics:BezierWaveDrawable x:Name="WaveformDrawable" />
                </GraphicsView.Drawable>
            </GraphicsView>
        </Border>

        <!-- Harmonics Label - Row 2 -->
        <Label Grid.Row="2" Text="Harmonics" TextColor="#666" FontSize="9"
               HorizontalOptions="Center" Margin="0,1" />

        <!-- Harmonic Sliders - Row 3 -->
        <Border Grid.Row="3"
                StrokeShape="RoundRectangle 4"
                Stroke="#333"
                StrokeThickness="1"
                BackgroundColor="#0f0f1a">
            <GraphicsView x:Name="HarmonicsView" />
        </Border>

        <!-- Result Preview Label - Row 4 -->
        <Label Grid.Row="4" Text="Result" TextColor="#666" FontSize="9"
               HorizontalOptions="Center" Margin="0,1" />

        <!-- Result Waveform Preview - Row 5 -->
        <Border Grid.Row="5"
                StrokeShape="RoundRectangle 4"
                Stroke="#2a5a2a"
                StrokeThickness="1">
            <GraphicsView x:Name="PreviewView">
                <GraphicsView.Drawable>
                    <graphics:WaveformPreviewDrawable x:Name="PreviewDrawable" />
                </GraphicsView.Drawable>
            </GraphicsView>
        </Border>

        <!-- Piano Keyboard - Row 6 -->
        <Border Grid.Row="6"
                StrokeShape="RoundRectangle 4"
                Stroke="#444"
                StrokeThickness="1"
                Margin="0,4,0,0"
                HeightRequest="80">
            <GraphicsView x:Name="PianoView" />
        </Border>
    
    </Grid>

    <!-- Landscape Layout (hidden by default, shown when width > height) -->
    <!-- This will be created programmatically -->

</ContentPage>
